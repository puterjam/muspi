{
    "_comment": "全局按键映射配置文件",
    "_description": "定义统一的功能按键，所有插件使用相同的按键配置",
    "_note": "按键代码参考: https://github.com/torvalds/linux/blob/master/include/uapi/linux/input-event-codes.h",

    "settings": {
        "_comment": "全局设置",
        "longpress_threshold": 3.0
    },

    "keymap": {
        "_comment": "全局功能按键映射 - 支持键盘、手柄等输入设备",

        "navigation": {
            "_comment": "导航类按键",
            "up": ["KEY_UP"],
            "down": ["KEY_DOWN"],
            "left": ["KEY_LEFT"],
            "right": ["KEY_RIGHT"]
        },

        "action": {
            "_comment": "功能操作按键",
            "select": ["KEY_Z"],
            "cancel": ["KEY_X"],
            "next_screen": ["KEY_PAGEDOWN"],
            "previous_screen": ["KEY_PAGEUP"],
            "menu": ["KEY_M"],
            "screenshot": ["KEY_F12"]
        },

        "media": {
            "_comment": "媒体控制按键",
            "play_pause": ["KEY_PLAYPAUSE", "KEY_KP1"],
            "next": ["KEY_NEXTSONG", "KEY_KP2"],
            "previous": ["KEY_PREVIOUSSONG"],
            "stop": ["KEY_STOPCD"],
            "volume_up": ["KEY_VOLUMEUP"],
            "volume_down": ["KEY_VOLUMEDOWN"],
            "mute": ["KEY_MUTE"]
        },

        "gamepad":{
            "up": ["BTN_DPAD_UP", "ABS_HAT0Y"],
            "down": ["BTN_DPAD_DOWN", "ABS_HAT0Y"],
            "left": ["BTN_DPAD_LEFT", "ABS_HAT0X"],
            "right": ["BTN_DPAD_RIGHT", "ABS_HAT0X"],
            "a": ["BTN_A"],
            "b": ["BTN_B"],
            "x": ["BTN_X"],
            "y": ["BTN_Y"],
            "tl": ["BTN_TL"],
            "tr": ["BTN_TR"],
            "lb": ["BTN_LB"],
            "rb": ["BTN_RB"],
            "thumb": ["BTN_THUMBL", "BTN_THUMBR"],
            "select": ["BTN_SELECT"],
            "start": ["BTN_START"],
            "screenshot": ["KEY_RECORD"],
            "mode": ["BTN_MODE"]
        },

        "_usage_note": {
            "select": "确定键 - 用于确认操作、播放/暂停、跳跃等",
            "cancel": "取消键 - 用于取消操作、下一曲、切换视图等",
