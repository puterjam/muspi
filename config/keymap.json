{
    "_comment": "全局按键映射配置文件",
    "_description": "定义统一的功能按键，所有插件使用相同的按键配置",
    "_note": "按键代码参考: https://github.com/torvalds/linux/blob/master/include/uapi/linux/input-event-codes.h",

    "settings": {
        "_comment": "全局设置",
        "longpress_threshold": 1
    },

    "keymap": {
        "_comment": "全局功能按键映射 - 支持键盘、手柄等输入设备",

        "navigation": {
            "_comment": "导航类按键",
            "up": ["KEY_UP", {"type": "ABS", "code": "ABS_HAT0Y", "value": -1}],
            "down": ["KEY_DOWN", {"type": "ABS", "code": "ABS_HAT0Y", "value": 1}],
            "left": ["KEY_LEFT", {"type": "ABS", "code": "ABS_HAT0X", "value": -1}],
            "right": ["KEY_RIGHT", {"type": "ABS", "code": "ABS_HAT0X", "value": 1}]
        },

        "action": {
            "_comment": "功能操作按键",
            "select": ["KEY_Z", "BTN_EAST"],
            "cancel": ["KEY_X", "BTN_SOUTH"],
            "next_screen": ["KEY_PAGEDOWN", "BTN_TR"],
            "previous_screen": ["KEY_PAGEUP", "BTN_TL"],
            "menu": ["KEY_M", "BTN_MODE"],
            "screenshot": ["KEY_F12", "BTN_Z"]
        },

        "media": {
            "_comment": "媒体控制按键",
            "play_pause": ["KEY_PLAYPAUSE"],
            "next": ["KEY_NEXTSONG"],
            "previous": ["KEY_PREVIOUSSONG"],
            "stop": ["KEY_STOPCD"],
            "volume_up": ["KEY_VOLUMEUP", "BTN_TR2"],
            "volume_down": ["KEY_VOLUMEDOWN", "BTN_TL2"],
            "mute": ["KEY_MUTE"]
        },

        "gamepad":{
            "_comment": "手柄按键映射 - 支持按钮(BTN_DPAD_*)和轴事件(ABS_*)",
            "up": [
                "BTN_DPAD_UP",
                {"type": "ABS", "code": "ABS_HAT0Y", "value": -1}
            ],
            "down": [
                "BTN_DPAD_DOWN",
                {"type": "ABS", "code": "ABS_HAT0Y", "value": 1}
            ],
            "left": [
                "BTN_DPAD_LEFT",
                {"type": "ABS", "code": "ABS_HAT0X", "value": -1}
            ],
            "right": [
                "BTN_DPAD_RIGHT",
                {"type": "ABS", "code": "ABS_HAT0X", "value": 1}
            ],
            "a": ["BTN_A", "BTN_SOUTH"],
            "b": ["BTN_B", "BTN_EAST"],
            "x": ["BTN_X", "BTN_WEST"],
            "y": ["BTN_Y", "BTN_NORTH"],
            "e": ["BTN_EAST"],
            "s": ["BTN_SOUTH"],
            "w": ["BTN_WEST"],
            "n": ["BTN_NORTH"],
            "tl": ["BTN_TL"],
            "tr": ["BTN_TR"],
            "lb": ["BTN_LB", "BTN_TL2"],
            "rb": ["BTN_RB", "BTN_TR2"],
            "thumb": ["BTN_THUMBL", "BTN_THUMBR"],
            "select": ["BTN_SELECT"],
            "start": ["BTN_START"],
            "screenshot": ["KEY_RECORD", "BTN_Z"],
            "mode": ["BTN_MODE"]
        },

        "_usage_note": {
            "select": "确定键 - 用于确认操作、播放/暂停、跳跃等",
            "cancel": "取消键 - 用于取消操作、下一曲、切换视图等",
            "menu": "菜单键 - 用于切换插件、打开菜单等",
            "screenshot": "截图键 - 用于截取当前屏幕内容"
        }
    },

    "available_keys": {
        "_comment": "可用的按键列表参考 (仅供参考，方便用户改键)",
        "media_keys": [
            "KEY_PLAYPAUSE",
            "KEY_PLAY",
            "KEY_PAUSE",
            "KEY_STOPCD",
            "KEY_NEXTSONG",
            "KEY_PREVIOUSSONG",
            "KEY_FORWARD",
            "KEY_REWIND"
        ],
        "volume_keys": [
            "KEY_VOLUMEUP",
            "KEY_VOLUMEDOWN",
            "KEY_MUTE"
        ],
        "numeric_keys": [
            "KEY_KP0",
            "KEY_KP1",
            "KEY_KP2",
            "KEY_KP3",
            "KEY_KP4",
            "KEY_KP5",
            "KEY_KP6",
            "KEY_KP7",
            "KEY_KP8",
            "KEY_KP9"
        ],
        "navigation_keys": [
            "KEY_UP",
            "KEY_DOWN",
            "KEY_LEFT",
            "KEY_RIGHT",
            "KEY_ENTER",
            "KEY_ESC",
            "KEY_SPACE"
        ],
        "function_keys": [
            "KEY_F1",
            "KEY_F2",
            "KEY_F3",
            "KEY_F4",
            "KEY_F5",
            "KEY_F6",
            "KEY_F7",
            "KEY_F8",
            "KEY_F9",
            "KEY_F10",
            "KEY_F11",
            "KEY_F12"
        ],
        "gamepad_buttons": [
            "BTN_A",
            "BTN_B",
            "BTN_X",
            "BTN_Y",
            "BTN_TL",
            "BTN_TR",
            "BTN_SELECT",
            "BTN_START",
            "BTN_DPAD_UP",
            "BTN_DPAD_DOWN",
            "BTN_DPAD_LEFT",
            "BTN_DPAD_RIGHT"
        ],
        "gamepad_axes": {
            "_comment": "手柄轴事件 - 使用对象格式: {type: 'ABS', code: 'ABS_XXX', value: N}",
            "_example": {"type": "ABS", "code": "ABS_HAT0Y", "value": -1},
            "hat": [
                "ABS_HAT0X (-1=left, 1=right)",
                "ABS_HAT0Y (-1=up, 1=down)",
                "ABS_HAT1X",
                "ABS_HAT1Y"
            ],
            "stick": [
                "ABS_X (左摇杆X轴)",
                "ABS_Y (左摇杆Y轴)",
                "ABS_RX (右摇杆X轴)",
                "ABS_RY (右摇杆Y轴)",
                "ABS_Z (左扳机)",
                "ABS_RZ (右扳机)"
            ]
        }
    }
}
